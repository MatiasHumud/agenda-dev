extends ../../layout.jade

block contenido
	-if (user.permission == "Admin")
		include ../session_permission/adminActions.jade
	-else if (user.permission == "Branch")
		include ../session_permission/branchActions.jade
	-else if (user.permission == "Resource")
		include ../session_permission/resourceActions.jade
	-else
		include ../session_permission/userActions.jade

	main
		div(class="container mx-auto col-xs-10 col-sm-8 col-md-6 col-lg-4 top-space")
			h1(class="text-center mb-5") Detalle de servicio
			div(class="form-group")
				label(class="font-weight-bold mr-3") Nombre:
				label #{service.name}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Género:
				label
					-if (service.gender == null)
						| No determinado
					-else
						| #{service.gender}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Categoría:
				label #{service.category}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Descripción:
				label #{service.brief}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Duración:
				label #{service.duration} minutos
			//div(class="form-group")
			//	label(class="font-weight-bold mr-3") Forma HTML:
			//	label
			//		-if (service.shape == null)
			//			| No determinada
			//		-else
			//			| #{service.shape}
			div(class="btn-group top-space" role="group")
				a(href="/session/servicios/" class="btn btn-default btn-outline-danger btn-lg" data-toggle="tooltip" data-placement="top" title="Volver a Mis Servicios")
					i(class="fa fa-caret-square-o-left")
