extends ../../layout.jade

block contenido
	-if (user.permission == "Admin")
		include ../session_permission/adminActions.jade
	-else if (user.permission == "Branch")
		include ../session_permission/branchActions.jade
	-else if (user.permission == "Resource")
		include ../session_permission/resourceActions.jade
	-else
		include ../session_permission/userActions.jade

	main
		div(class="container mx-auto col-xs-12 col-sm-6 top-space")
			h1(class="text-center mb-3") Crear servicio
			form(class="form-vertical")
				// -if(user.permission == "Admin") (#*#)
				// 	div(class="form-group")
				// 		label(for="permission") Rol
				// 		select(class="form-control" name="permission" id="permission")
				// 			for permiso in permisos
				// 				option(class="text-secondary" value=permiso)=permiso
				div(class="form-group")
					label(for="name") Nombre
					input(type="text" name="name" placeholder="Nombre" id="name" class="form-control")
				div(class="form-group")
					label(for="gender") Género
					select(class="form-control" name="gender" id="gender")
						option(class="text-secondary" selected) Seleccione un género
						for gender in genders
							option(class="text-secondary" value=gender)=gender
				div(class="form-group")
					label(for="category") Tipo
					select(class="form-control" name="category" id="category")
						option(class="text-secondary" selected) Seleccione un tipo
						for tipo in tipos
							option(class="text-secondary" value=tipo)=tipo
				div(class="form-group")
					label(for="brief") Detalle
					textarea(type="text" name="brief" placeholder="Ingresar reseña con detalle del servicio" id="brief" class="form-control" rows="5")
				div(class="form-group")
					label(for="position") Posición de la zona del cuerpo:
					select(class="form-control" name="position" id="position")
						option(class="text-secondary" selected) Seleccione una posición
						for position in positions
							option(class="text-secondary" value=position)=position
				//div(class="form-group")
				//	label(for="shape") Código HTML de la forma
				//	textarea(id="shape" name="shape" class="form-control" rows="7")
				div(class="form-group text-right top-space")
					div(class="btn-group")
						button(type="submit" formaction="/session/servicios" class="btn btn-default btn-outline-danger btn-lg" data-toggle="tooltip" data-placement="top" title="Volver a Mis Servicios")
							i(class="fa fa-caret-square-o-left")
						button(type="submit" formaction="/session/servicios" formmethod="POST" class="btn btn-outline-success btn-lg" data-toggle="tooltip" data-placement="top" title="Enviar")
							i(class="fa fa-check-square-o")
