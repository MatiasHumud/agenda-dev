extends ../../layout.jade

block contenido
	-if (user.permission == "Admin")
		include ../session_permission/adminActions.jade
	-else if (user.permission == "Branch")
		include ../session_permission/branchActions.jade
	-else if (user.permission == "Resource")
		include ../session_permission/resourceActions.jade
	-else
		include ../session_permission/userActions.jade

	main
		div(class="container mx-auto col-xs-12 col-sm-6 top-space")
			h1(class="text-center mb-3") Crear ficha clínica
			form(id="sendRecord" class="form-vertical" action="/session/records" method="POST")
				div(class="form-group")
					label(for="name") Nombre
					input(type="text" name="name" id="name")
				div(class="form-group")
					label(for="lastName") Apellido
					input(type="text" name="lastName" id="lastName")
				div(class="form-group")
					label(for="rut") RUT
					input(type="text" name="rut" id="rut")
				div(class="form-group")
					label(for="fechNac") Fecha Nacimiento
					input(type="date" name="fechNac" id="fechNac")
				div(class="form-group")
					label(for="gender") Género
					select(class="form-control" name="gender" id="gender")
						option(class="text-secondary" value=undefined selected disabled) Selccione una opción
						option(class="text-secondary" value="M") Mujer
						option(class="text-secondary" value="H") Hombre
				div(class="form-group")
					label(for="location") Driección
					input(type="text" name="location" id="location")
				div(class="form-group")
					label(for="email") Email
					input(type="text" name="email" value="#{user.email}" id="email" class="form-control")
				div(class="form-group")
					label(for="phone")
					input(type="number" name="phone" id="phone")
				div(class="form-group")
					label(for="a1") A1
					input(type="text" name="a1" id="a1")
				div(class="form-group")
					label(for="a2") A2
					input(type="text" name="a2" id="a2")
				div(class="form-group text-right top-space")
					button(type="submit" class="btn btn-outline-success btn-lg" data-toggle="tooltip" data-placement="top" title="Enviar")
						i(class="fa fa-check-square-o")

				script.
					$('#sendRecord').submit(function(e) {

					});
