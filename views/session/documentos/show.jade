extends ../../layout.jade

block contenido
	-if (user.permission == "Admin") 
		include ../session_permission/adminActions.jade
	-else if (user.permission == "Branch")
		include ../session_permission/branchActions.jade
	-else if (user.permission == "Resource")
		include ../session_permission/resourceActions.jade
	-else
		include ../session_permission/userActions.jade

	main
		div(class="container mx-auto col-xs-10 col-sm-8 col-md-6 col-lg-4 top-space")
			h1(class="text-center mb-3") Detalle del agendamiento
			div(class="form-group")
				label(class="font-weight-bold mr-3") Servicio solicitado:
				label #{documento.servicio.name}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Categoría:
				label #{documento.servicio.category}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Sucursal:
				label #{documento.sucursal.name}	
			div(class="form-group")
				label(class="font-weight-bold mr-3") Sesión con el especialista:
				label #{documento.recurso.name}  #{documento.recurso.lastName}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Estado: 
				label #{documento.status}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Inicia: 
				label #{documento.event.start}
			div(class="form-group")
				label(class="font-weight-bold mr-3") Termina:
				label #{documento.event.end}	
			div(class="btn-group top-space")
				a(href="/session/documentos/" class="btn btn-default btn-outline-danger btn-lg" data-toggle="tooltip" data-placement="top" title="Volver a Mis Agendamientos")
					i(class="fa fa-caret-square-o-left")

